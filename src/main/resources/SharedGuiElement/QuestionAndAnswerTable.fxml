<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<fx:root type="HBox" xmlns:fx="http://javafx.com/fxml">
    <TableView fx:id="questionAndAnswerTable"
               HBox.hgrow="ALWAYS" >
        <columns>
            <TableColumn text="Type" fx:id="type" editable="false" sortable="false"/>
            <TableColumn text="Q/A Id" fx:id="id" editable="false" sortable="false" />
            <TableColumn text="Answer" fx:id="answerButton" editable="false" sortable="false"/>
            <TableColumn text="Problem Id" fx:id="problemId" editable="false" sortable="false"/>
            <TableColumn text="Content" fx:id="content" editable="false" sortable="false"/>
            <TableColumn text="Time Stamp" fx:id="timeStamp" editable="false" sortable="false"/>
        </columns>
    </TableView>
</fx:root>